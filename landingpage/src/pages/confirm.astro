---
import Layout from '../layouts/Layout.astro';
---

<Layout title="E-Mail bestätigt!">
  <div class="container">
    <div class="icon">✅</div>
    <h1>Bestätigung erfolgreich!</h1>
    <p>Ihre E-Mail-Adresse wurde erfolgreich bestätigt. Vielen Dank!</p>
    <div id="confirmationDetails" class="token-info">Wird geladen...</div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const params = new URLSearchParams(window.location.search);
      const token = params.get('token');
      const detailsDiv = document.getElementById('confirmationDetails');

      if (token) {
        detailsDiv.innerHTML = 'Ihr Bestätigungs-Token: <br><strong>' + token + '</strong>';
      } else {
        detailsDiv.textContent = 'Kein Bestätigungs-Token gefunden.';
      }
    });
  </script>
</Layout>